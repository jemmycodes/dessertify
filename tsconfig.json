{
  "compilerOptions": {
    "target": "ES2017",
    "typeRoots": ["app/global.d.ts", "./node_modules/@types"],
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "baseUrl": "./",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "noErrorTruncation": true, // Disables error and type truncation
    "verbatimModuleSyntax": true, // Automatically add "type" modifier to type import statements
    "isolatedModules": true,
    "skipDefaultLibCheck": true,
    "incremental": true,
    "jsx": "preserve",
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": ["global.d.ts", "middleware.ts", "app", ".next/types/**/*.ts", "next-env.d.ts", "public/images.d.ts"],
  "exclude": ["next", "node_modules"]
}
